{
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": "^5.6.0 || ^7.0",
        "cweagans/composer-patches": "^1.5.0",
        "drupal-composer/drupal-scaffold": "^2.1.0",
        "wikimedia/composer-merge-plugin": "^1.4",
        "oomphinc/composer-installers-extender": "^1.1",
        "govcms/govcms": "8.4.x-dev"
    },
    "require-dev": {
        "phing/phing": "^2.16",
        "phpunit/phpunit": "~4.8 <5",
        "squizlabs/php_codesniffer": "^2.8",
        "drupal/console": "^1.0",
        "drupal/coder": "^8.2",
        "drupal/drupal-extension": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "govCMS\\Config\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            },
            "excludes": [
                "sites/development.services.yml"
            ]
        },
        "enable-patching": true,
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "docroot/core": ["type:drupal-core"],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/modules/custom/{$name}": ["type:drupal-custom-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "docroot/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "docroot/libraries/{$name}": ["type:drupal-library", "type:bower-asset", "type:npm-asset"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {},
        "merge-plugin": {
            "require": [
                "vendor/govcms/govcms8-config/composer.config.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": false,
            "ignore-duplicates": true
        }
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    }
}
